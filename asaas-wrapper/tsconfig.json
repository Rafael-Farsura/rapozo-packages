{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "paths": {
      "@types": ["./src/types"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
